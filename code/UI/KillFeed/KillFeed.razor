@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@namespace Scenebox.UI
@attribute [StyleSheet]

<root>
</root>

@code
{
    public static KillFeed Instance { get; private set; }
    TimeSince timeSinceHurt = 10;

    public record Entry(string Killer, string Object, string Victim);

    protected override void OnStart()
    {
        Instance = this;
    }

    [Broadcast]
    public void AddEntry(string killer, string obj, string victim)
    {
        var entry = new KillFeedEntry();
        entry.Entry = new Entry((killer == victim) ? "" : killer, obj, victim);
        Panel.AddChild(entry);
        StateHasChanged();
    }

    protected override int BuildHash() => System.HashCode.Combine("");
}